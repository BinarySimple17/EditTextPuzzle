<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="letter_normal">24dp</dimen>
    <style name="TextEditPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/letter_normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/widget_edittext_dark</item>
        <item name="android:ems">10</item>
    </style>
    <style name="TextViewPrimary">
        <item name="android:layout_width">@dimen/letter_normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/widget_edittext_dark</item>
    </style>
    <declare-styleable name="EditTextPuzzle">
        <attr format="string" name="placeholder"/>
        <attr format="string" name="text"/>
        <attr format="enum" name="labelPosition">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>
</resources>